<%- include('../partials/header.ejs') %>

<%- include('../partials/preheader.ejs', {preheader: "Here is your patient data"}) %>
<table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
	<tr>
		<td>
			&nbsp;</td>
		<td class="container">
			<div class="content">

				<%- include('../partials/logo.ejs') %>

				<!-- START CENTERED WHITE CONTAINER -->
				<table role="presentation" class="main" id="content">

					<!-- START MAIN CONTENT AREA -->
					<tr>
						<td class="wrapper">
							<table role="presentation" id="subtable" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<td>
										<p>Hi,</p>
										<p>You recently requested to get information about your current status.</p>
										<table>
											<tbody>
												<tr>
													<td>Name:</td>
													<td><%= data.name %></td>
												</tr>
												<tr>
													<td>Patient Number:</td>
													<td><%= data.patientNumber %></td>
												</tr>
												<tr>
													<td>Status:</td>
													<td><%= data.status %></td>
												</tr>
											</tbody>
										</table>
										<p>
											Your last result in a test was
										</p>

										<table>
											<thead>
												<tr>
													<th>Date</th>
													<th>Status</th>
													<th>Result</th>
												</tr>
											</thead>
											<tbody>
												<% if(data.tests.length > 0) { %>
												<% for ( var i= 0 ; i < data.tests.length ; i++) { %>
												<tr>
													<td>data.tests[i].date</td>
													<td>data.tests[i].status</td>
													<td>data.tests[i].result</td>
												</tr>
												<% } %>
												<% } else { %>
												<p> You haven't made any tests yet.'</p>
												<% } %>
											</tbody>
										</table>

										<p>
											If you <strong>not request this reset password</strong>, please contact us.
										</p>

									</td>
								</tr>
							</table>
						</td>
					</tr>

					<!-- END MAIN CONTENT AREA -->
				</table>
				<!-- END CENTERED WHITE CONTAINER -->
				<!-- START FOOTER -->
				<%- include('../partials/copyright.ejs') %>
				<!-- END FOOTER -->

			</div>
		</td>
		<td>&nbsp;</td>
	</tr>
</table>

<%- include('../partials/footer.ejs') %>